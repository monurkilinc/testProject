@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>My Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me now!</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        Console.WriteLine($"Starting count:{currentCount}");
    
        for(int i=0;i<5;i++)
        {
            currentCount++;
            Console.WriteLine($"Loop {i+1} : currentCount={currentCount}");
        }
    Console.WriteLine($"Son deger: {currentCount}");
    }
}
